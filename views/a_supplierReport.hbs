{{>a_navbar}} {{>a_sidebar}}
<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2">
            <div class="container">
                <h1 class="display-4 text-center">Supplier Report</h1>
            </div>
            <div class="container">
                <form>

                    <div class="form-group">
                        <label for="supplierReport_ID">Supplier ID</label>
                        <select class="form-control" id="supplierReport_ID">
                            <option value="0">Please select a product</option>
                            {{!-- {{#each product}}
                            <option value="{{this.productID}}">{{this.productName}}</option>
                            {{/each}} --}}
                        </select>
                    </div>

                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label for="supplierReport_start">From</label>
                                <div class="input-group mb-2">
                                    <input type="date" class="form-control" id="supplierReport_start" required>
                                    <script>
                                        Date.prototype.toDateInputValue = (function () {
                                            var local = new Date(this);
                                            local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
                                            local.setFullYear(local.getFullYear()-1);
                                            return local.toJSON().slice(0, 10);
                                        });
                                        document.getElementById('supplierReport_start').value = new Date()
                                            .toDateInputValue();
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="supplierReport_end">To</label>
                                <div class="input-group mb-2">
                                    <input type="date" class="form-control" id="supplierReport_end" required>
                                    <script>
                                        Date.prototype.toDateInputValue = (function () {
                                            var local = new Date(this);
                                            local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
                                            return local.toJSON().slice(0, 10);
                                        });
                                        document.getElementById('supplierReport_end').value = new Date()
                                            .toDateInputValue();
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="form-group ">
                        <div class="row">
                            <div class="col-6 mb-5 d-flex justify-content-end">
                                <a href="/a/supplierReportDetail" type="button" class="btn btn-outline-dark"
                                    id="submitNewSale">Submit</a>
                            </div>
                            <div class="col-6 mb-5 d-flex justify-content-start">
                                <a href="/a/sales" type="button" class="btn btn-outline-secondary"
                                    id="cancelNewSale">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>
</div>
</div>