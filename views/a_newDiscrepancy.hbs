{{>a_navbar}} {{>a_sidebar}}
<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2">
            <div class="container">
                <h1 class="display-4 text-center">New Discrepancy</h1>
            </div>
            <div class="container">
                <form>
                    <div class="form-group">
                        <label for="productID">Product ID</label>
                        <div class="row">
                            <div class="col-9">
                                <!-- newSale_prodID -->
                                <select class="form-control" id="productID">
                                    <option value="0">Please select a product</option>
                                    {{#each product}}
                                    <option value="{{this.productID}}">{{this.productName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-3">
                                <button type="button" class="btn btn-outline-dark btn-block"
                                    id="newDiscrepancy_checkID">Check</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="oldCount_qty">Old Count</label>
                        <input type="number" class="form-control" id="oldCount_qty" placeholder="" min="0" required readonly>
                    </div>
                    <div class="form-group">
                        <label for="newCount_qty">New Count</label>
                        <input type="number" class="form-control" id="newCount_qty" placeholder="" min="0" required>
                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-6 mb-5 d-flex justify-content-end">
                                <button type="button" class="btn btn-outline-dark" id="submitNewDiscrepancy">Submit</button>
                            </div>
                            <div class="col-6 mb-5 d-flex justify-content-start">
                                <a href="/a/discrepancy" class="btn btn-outline-secondary" id="cancelNewDiscrepancy">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>


</div>
</div>
</div>