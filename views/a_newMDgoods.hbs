{{>a_navbar}}
{{>a_sidebar}}
            <div class="col-9">
                    <div class="shadow">
						<div class="d-flex flex-column mt-2">
                            <div class="container">
								<h1 class="display-4 text-center">New Missing/Damaged goods</h1>
							</div>
							<div class="container">
								<form>
									<div class="form-group">
                                        <label for="MDproductID">Product ID</label>
                                        <div class="row">
                                            <div class="col-9">
                                                <!-- newMDgoods_prodID -->
                                                <select class="form-control" id="MDproductID">
                                                    <option value="0">Please select a product</option>
                                                    {{#each product}}
                                                    <option value="{{this.productID}}">{{this.productName}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                            <div class="col-3">
                                                <button type="button" class="btn btn-outline-dark btn-block"
                                                    id="newMDgoods_checkID">Check</button>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="MDdmg">Number of Damaged</label>
                                        <input type="number" class="form-control" id="MDdmg" placeholder="" min="0" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="MDcomment">Comment</label>
                                        <textarea class="form-control" id="MDcomment" placeholder="" rows="3" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-6 mb-5 d-flex justify-content-end">
                                                <button type="button" class="btn btn-outline-dark" id="submitNewMDgoods">Submit</button>
                                            </div>
                                            <div class="col-6 mb-5 d-flex justify-content-start">
                                                <a href="/a/MDgoods" class="btn btn-outline-secondary">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
								</form>
						    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>