<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2">
            <div class="container">
                <h1 class="display-4 text-center">New Sale</h1>
            </div>
            <div class="container">
                <form>
                    <div class="form-group">
                        <label for="newSale_prodID">Product ID</label>
                        <div class="row">
                            <div class="col-9">
                                <input type="number" class="form-control" id="newSale_prodID" placeholder="ProductID of item" required>
                            </div>
                            <div class="col-3">
                                <button type="button" class="btn btn-outline-dark btn-block" id="newSale_checkID">Check</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="control">Quantity</label>
                        <input type="number" class="form-control" id="newSale_qty" placeholder="Quantity Sold" onchange="calculatePrice(this.value)" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="newSale_dateSold">Date Sold</label>
                        <div class="input-group mb-2">
                            <input type="date" class="form-control" id="newSale_dateSold" required>
                            <script>
                                Date.prototype.toDateInputValue = (function() {
                                    var local = new Date(this);
                                    local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
                                    return local.toJSON().slice(0, 10);
                                });
                                document.getElementById('newSale_dateSold').value = new Date().toDateInputValue();
                            </script>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="newSale_sellingPrice">Selling Price</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">PHP</div>
                            </div>
                            <input type="number" class="form-control" id="newSale_sellingPrice" placeholder="0.00" min="0" disabled required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="newSale_total">Total</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">PHP</div>
                            </div>
                            <input type="number" class="form-control" id="newSale_total" placeholder="0.00" min="0" disabled required>
                        </div>
                    </div>
                </form>
                <div class="form-group ">
                    <div class="row">
                        <div class="col-6 mb-5 d-flex justify-content-end">
                            <button type="button" class="btn btn-outline-dark" id="submitNewSale">Submit</button>
                        </div>
                        <div class="col-6 mb-5 d-flex justify-content-start">
                            <a type="button" class="btn btn-outline-secondary" id="cancelNewSale">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
</div>
</div>