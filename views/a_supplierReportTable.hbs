{{>a_navbar}} {{>a_sidebar}}
<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2">
            <div class="container">
                <h1 class="display-6 text-center">{{reporttitle}}</h1>
                {{#if fromDate}}
                <h3 class="display-6 text-center">{{getDate fromDate}} - {{getDate toDate}}</h3>
                {{/if}}
            </div>
            <div class="d-flex flex-column">
                <input type ="hidden" id = "supplierID" value ="{{supplierID}}">
                <input type ="hidden" id = "fromDate" value ="{{fromDate}}">
                <input type ="hidden" id = "toDate" value ="{{toDate}}">
                <table class="table table-bordered mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Total Sales</th>
                            <th scope="col">Average Daily Sales</th>
                            <th scope="col">Total Amount Paid</th>
                            {{!-- <th scope="col"></th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each supplierReportData}}
                        {{>supplierReportDetail_row this}}
                        {{/each}}
                        {{#if totalSales}}
                        <tr>
                            <th scope="row" colspan = "2" class="text-left">Total</th>
                            <td class="text-right">{{getPrice totalSales}}</td>
                            <td class="text-right">{{getPrice avgSales}}</td>
                            <td class="text-right">{{getPrice totalPaid}}</td>
                        </tr>
                        {{/if}}
                        <tr>
                            <td class="text-right" colspan='5'>
                                <a href="/a/viewBreakdown/{{{supplierID}}}/{{{fromDate}}}/{{{toDate}}}" class="btn btn-outline-dark btn-block">View Breakdown</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</div>
</div>