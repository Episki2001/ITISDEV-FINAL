            <div class="col-9">
                    <div class="shadow">
						<div class="d-flex flex-column mt-2">
                            <div class="container">
								<h1 class="display-4 text-center">Edit Supplier</h1>
							</div>
							<div class="container">
								<form>
									<div class="form-group">
										<input type="hidden" class="form-control" id="supplierID" value="{{supplier.supplierID}}">
									</div>
									<div class="form-group">
										<label for="formGroupExampleInput2">Company Name</label>
										<input type="text" class="form-control" id="cName" value="{{supplier.companyName}}" readonly>
									</div>
									<div class="form-group">
										<label for="formGroupExampleInput">Company Address</label>
										<input type="text" class="form-control" id="cAddress" value="{{supplier.companyAddress}}" readonly>
									</div>
									<div class="form-group">
										<label for="formGroupExampleInput2">Email</label>
										<input type="text" class="form-control" id="email" value="{{supplier.email}}">
									</div>
									<div class="form-group">
										<label for="formGroupExampleInput2">Phone Number</label>
										<input type="text" class="form-control" id="phoneNum" value="{{supplier.phoneNum}}">
									</div>
								</form>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6 mb-5 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-outline-dark" id = "submitEditSupplier">Submit</button>
                                    </div>
                                    <div class="col-6 mb-5 d-flex justify-content-start">
                                        <a href="/a/suppliers" class="btn btn-outline-secondary">Cancel</a>
                                    </div>
                                </div>
