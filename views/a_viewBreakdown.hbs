{{>a_navbar}} {{>a_sidebar}}
<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2">
            <div class="container">
                <h1 class="display-6 text-center">{{reporttitle}}</h1>
                {{#if fromDate}}
                <h3 class="display-6 text-center">{{getDate fromDate}} - {{getDate toDate}}</h3>
                {{/if}}
            </div>
            <div class="d-flex flex-column">
                <table class="table table-bordered mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class ="text-center">Date</th>
                            <th scope="col" class ="text-center">Transaction Type</th>
                            <th scope="col" class ="text-center">ProductID</th>
                            <th scope="col" class ="text-center">Product Name</th>
                            <th scope="col" class ="text-center">User ID</th>
                            <th scope="col" class ="text-center">Amount</th>
                            {{!-- <th scope="col"></th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each breakdown}}
                        {{>viewBreakdown_row this}}
                        {{/each}}
                        {{!-- {{#if totalSales}}
                        <tr>
                            <th scope="row" colspan = "2" class="text-left">Total</th>
                            <td class="text-right">{{getPrice totalSales}}</td>
                            <td class="text-right">{{getPrice avgSales}}</td>
                            <td class="text-right">{{getPrice totalPaid}}</td>
                        </tr>
                        {{/if}} --}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</div>
